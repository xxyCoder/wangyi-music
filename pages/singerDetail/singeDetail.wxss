.imgShow {
    position: relative;
    width: 100%;
    height: 500rpx;
    overflow: hidden;
}
.imgShow image {
    position: absolute;
    width: 100%;
    height: 100%;
    display: block;
}
.imgShow .box {
    position: absolute;
    bottom: 40rpx;
    left: 30rpx;
}
.box .name {
    font-size: 50rpx;
    color: #fff;
    font-weight: bold;
}
.box .txt {
    font-size: 30rpx;
    color: #fff;
}