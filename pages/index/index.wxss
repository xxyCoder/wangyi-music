page {
    padding: 10rpx;
    box-sizing: border-box;
}
::-webkit-scrollbar {   /* 隐藏滚动条 */
    display: none;
}
swiper {
    width: 100%
}
swiper swiper-item {
    width: 100%;
}
swiper swiper-item image {
    display: block;
    width: 100%;
    height: 100%;
}

.title {
    font-size: 32rpx;
    font-weight: bold;
    line-height: 80rpx;
    color: #333;
    position: relative;
    text-indent: 30rpx;
}
.title::after {
    content: "";
    position: absolute;
    width: 5rpx;
    height: 50%;
    background-color: #cc2200;
    left: 0;
    top: 50%;
    transform: translate(0,-50%);
}
.hotlist {
    height: 300rpx;
    display: flex;
    overflow: auto;
    align-items: center;
}
.hotlist .item {
    width: 200rpx;
    text-align: center;
    margin-right: 20rpx;
}
.hotlist .item image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}
.hotlist .item text {
    font-size: 28rpx;
    color: #4d4d4d;
}

.musicbox {
    font-size: 28rpx;
    color: #4d4d4d
}
.musicbox .item {
    display: flex;
    padding: 10rpx 0rpx;
    margin-left: 32rpx;
    justify-content: space-between;
    border-bottom: 1rpx solid rgb(241, 241, 241);
}
.item .txbox {
    display: flex;
    flex-direction: column;
    flex: 1;
}
.item .playImg {
    width: 80rpx;
    height: 80rpx;
    display: block;
}
.item .txbox .mname {
    font-size: 35rpx;
    /* 避免文字过长影响布局 */
    width: 600rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;    
}
.item .txbox .name {
    font-size: 28rpx;
    color: #777;
}